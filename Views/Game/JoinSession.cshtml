@model Game
@using FYP_Project.Models
<style>

    html {
        width: 100%;
        height: 100%;
    }

    body {
        padding: 30px;
        background-color: #b1ade2;
        background-image: linear-gradient(315deg, #b1ade2 0%, #7ddff8 74%);
    }

    .inner-div {
        padding: 30px;
        background-color: white;
        margin: 0 auto;
        border-radius: 30px;
    }

    .welcome {
        padding: 5px;
        font-family: Helvetica;
        text-align: center;
    }



    .btn {
        box-sizing: content-box;
        width: 15%;
        text-align: center;
    }
</style>


<div class="inner-div">

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="PlayerDashboard">TFG</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="PlayerDashboard">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" target="_blank" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Game" asp-action="LetsPlay">Play</a>

                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Rank">Rank</a>
                    </li>


                    <li class="nav-item offset-sm-7">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logoff">Log Out</a>
                    </li>
                </ul>
            </div>
        </div>

    </nav>

    <div class="welcome">
        <h1><b>Join a Game Session</b></h1>
    </div>
    <br />



    <div class="form group">

        <form asp-controller="Game"
              asp-action="GamePlay">

            <div class="form-group row">
                <label asp-for="JoinSession" class="control-label offset-sm-2 col-sm-2"> Join Session:</label>
                <div class="col-sm-4">
                    <input type="text" asp-for="JoinSession" class="form-control" placeholder="Session ID" required="Required" />
                </div>
                <span asp-validation-for="JoinSession" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group row">
                <input type="submit" class="btn btn-primary offset-sm-5" value="JOIN" />
            </div>
            <br />


            <!-- if (DateTime.Now.Year >= 2042)
            {
                <span>The year 2042 has finally arrived!</span>
            }                   else
            {
            <span>We're still waiting for the year of 2042...</span>
            }                                      -->



        </form>

        <br />
        <br />
        <br />

    </div>
















</div>