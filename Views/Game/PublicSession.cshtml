@model Game

<style>

    html {
        width: 100%;
        height: 100%;
    }

    body {
        padding: 30px;
        background-color: #b1ade2;
        background-image: linear-gradient(315deg, #b1ade2 0%, #7ddff8 74%);
    }

    .inner-div {
        padding: 30px;
        background-color: white;
        margin: 0 auto;
        border-radius: 30px;
    }

    .welcome {
        padding: 5px;
        font-family: Helvetica;
        text-align: center;
    }



    .btn {
        box-sizing: content-box;
        width: 45%;
        text-align: center;
    }
</style>


<div class="inner-div">

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="PlayerDashboard">TFG</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="PlayerDashboard">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" target="_blank" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Game" asp-action="LetsPlay">Play</a>

                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Rank">Rank</a>
                    </li>



                    <li class="nav-item offset-sm-7">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logoff">Log Out</a>
                    </li>
                </ul>
            </div>
        </div>

    </nav>




    <div class="welcome">
        <h1><b>Join a Public Game Session</b></h1>
    </div>

    <br />
    <br />

    <div class="btn offset-sm-3">
        <form asp-controller="Game" asp-action="PublicUpload">
            <input type="submit" class="btn btn-outline-primary" value="Famous People" />
        </form>
        <br />
        <br />

    </div>

    <div class="btn offset-sm-3">
        <form asp-controller="Game" asp-action="PublicUpload2">
            <input type="submit" class="btn btn-outline-primary" value="Random People" />
        </form>
        <br />
        <br />

    </div>

    <div class="btn offset-sm-3">
        <form asp-controller="Game" asp-action="PublicUpload3">
            <input type="submit" class="btn btn-outline-primary" value="Selfies" />
        </form>
        <br />
        <br />

    </div>














</div>