@using FYP_Project.Models
@model FYP_Project.Program



<style>
    html {
        width: 100%;
        height: 100%;
    }

    body {
        padding: 30px;
        background-color: #b1ade2;
        background-image: linear-gradient(315deg, #b1ade2 0%, #7ddff8 74%);
    }

    .inner-div {
        padding: 30px;
        background-color: white;
        margin: 0 auto;
        border-radius: 30px;
    }

    .btn1 {
        box-sizing: content-box;
        width: 30%;
        text-align: center;
    }

    .btn2 {
        box-sizing: content-box;
        width: 30%;
        text-align: center;
    }

    .btn3 {
        box-sizing: content-box;
        width: 30%;
        text-align: center;
    }
</style>





<div class="inner-div">


    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="PlayerDashboard">TFG</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="PlayerDashboard">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" target="_blank" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Game" asp-action="LetsPlay">Play</a>

                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Rank">Rank</a>
                    </li>


                    <li class="nav-item offset-sm-7">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logoff">Log Out</a>
                    </li>
                </ul>
            </div>
        </div>

    </nav>


    <h1 class="text-center">Famous People</h1>

    <h5>Upload famous people photos and earn points.</h5>

    <form method="post"
          asp-controller="Game"
          asp-action="PhotoPublicUpload"
          enctype="multipart/form-data">

        <div class="form-group row">
            <div class="col-sm-3">
                <input type="file" name="picture" id="picture" class="form-control-file" />

            </div>
        </div>


        @if (ViewData["Picture"] != null)
        {
            <div class="form-group row">
                <div class="offset-sm-2 col-sm-6">
                    <img src="/photos/@ViewData["Picture"]" />
                </div>
            </div>
        }

        <div class="form-group row">
            <div class="offset-sm-3">
                <input type="submit" value="Upload" class="btn btn-primary" />
            </div>
        </div>

        @if (ViewData["Message"] != null)
        {
            <div class="form-group row">
                <div class="offset-sm-2 col-sm-6">
                    <div class="alert alert-@ViewData["MsgType"]">
                        <text>@Html.Raw(ViewData["Message"])</text>
                    </div>
                </div>
            </div>
        }

    </form>



</div>