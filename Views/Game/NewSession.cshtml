@model FYP_Project.Models.NewSession

<style>

    html {
        width: 100%;
        height: 100%;
    }

    body {
        padding: 30px;
        background-color: #7ee8fa;
        background-image: linear-gradient(315deg, #7ee8fa 0%, rgb(97, 194, 86) 74%);
    }

    .inner-div {
        padding: 30px;
        background-color: white;
        margin: 0 auto;
        border-radius: 30px;
    }

    .generate {
        padding: 5px;
        font-family: sans-serif;
        text-align: center;
    }

    .btn {
        box-sizing: content-box;
        width: 45%;
        text-align: center;
    }
</style>

<div class="inner-div">

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="" asp-action="PlayerDashboard">TFG</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="PlayerDashboard">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" target="_blank" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="GenerateView">Generate</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Game" asp-action="ManageSession">Session</a>
                    </li>

                    <li class="nav-item offset-sm-7">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logoff">Log Out</a>
                    </li>


                </ul>
            </div>
        </div>
    </nav>


    <div class="generate">
        <h1><b>Generate New Game Session</b></h1>
    </div>
    <br />
    <br />


    @section MoreScripts{




        <script type="text/javascript">
         
        </script>


    }






    
<form asp-controller="Game"
      asp-action="NewSession"
      method="post">

    <div class="form-group row">
        <label class="control-label offset-sm-2 col-sm-2" asp-for="SessionName">Session Name: </label>
        <div class="col-sm-4">
            <input type="text" asp-for="SessionName" class="form-control" required="Required" />

        </div>
        <div class="col-sm-3">
            <span asp-validation-for="SessionName" class="text-danger"></span>
        </div>
    </div>
    <br />




   

    <div class="form-group row">
        <label class="control-label offset-sm-2 col-sm-2" asp-for="gameTime">Game Time: </label>

        <div class="input-group date col-sm-4" id="gameTime" data-target-input="nearest">
            <input type="datetime" asp-for="gameTime" placeholder="Minimum 10 mins Maximum 60 mins" class="form-control" />
            <div class="input-group-append">
                <div class="input-group-text"><i class="fas fa-clock"></i> mins</div>
            </div>
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="gameTime" class="text-danger"></span>
        </div>
    </div>
    <br />


    <br />
    <br />

    <div class="btn offset-sm-3">
        <input type="submit" class="btn btn-success" value="Generate New Game Session" />
        <br />
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="alert alert-@ViewData["MsgType"]">
                <text class="col-sm-5">@ViewData["Message"]</text>
            </div>
        </div>
    }







</form>

    




</div>