@using FYP_Project.Models
@model List<Player>


<style>
    html {
        width: 100%;
        height: 100%;
    }

    body {
        padding: 30px;
        background-color: #b1ade2;
        background-image: linear-gradient(315deg, #b1ade2 0%, #7ddff8 74%);
    }

    .inner-div {
        padding: 30px;
        background-color: white;
        margin: 0 auto;
        border-radius: 30px;
    }

    .btn1 {
        box-sizing: content-box;
        width: 30%;
        text-align: center;
    }

    .btn2 {
        box-sizing: content-box;
        width: 30%;
        text-align: center;
    }

    .btn3 {
        box-sizing: content-box;
        width: 30%;
        text-align: center;
    }
</style>





<div class="inner-div">


    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="PlayerDashboard">TFG</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="PlayerDashboard">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" target="_blank" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Game" asp-action="LetsPlay">Play</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Rank">Rank</a>
                    </li>



                    <li class="nav-item offset-sm-7">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logoff">Log Out</a>
                    </li>
                </ul>
            </div>
        </div>

    </nav>








    <br />


    <div class="account-info">

        <div class="text-sm-center">
            <h3>Account Information</h3>
            <br />
            <br />
        </div>

        @section MoreScripts {
            <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
            <script src="~/lib/datatables/css/jquery.dataTables.min.js"></script>

            <script>
                $(document).ready(function () {
                    $('#jsTblPerform').DataTable({
                        paging: true,
                        ordering: true,
                        searching: true,
                        info: true,
                        lengthChange: true,
                        pageLength: 8
                    });
                });



            </script>

        }





        <form asp-controller="Account"
              asp-action="ManageAccount2">


            <div class="form-group row">
                <label class="col-lg-3 col-form-label form-control-label">Name: </label>
                <div class="col-sm-7">
                    <h6> @TempData["Name"]</h6>
                    <h6 class="text-center"></h6>
                </div>
            </div>


            <div class="form-group row">
                <label class="col-lg-3 col-form-label form-control-label">Username: </label>
                <div class="col-sm-7">
                    <h6>@ViewData["UserName"]</h6>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-lg-3 col-form-label form-control-label">Email: </label>
                <div class="col-sm-7">
                    <h6>@ViewData["Email"]</h6>

                </div>
            </div>

        </form>

        <div class="form-group row">
            <label class="col-lg-3 col-form-label form-control-label"></label>
            <div class="col-sm-7">
                <form asp-controller="Account"
                      asp-action="PlayerDashboard">
                    <input type="submit" class="btn btn-secondary" value="Back">
                </form>
            </div>
        </div>



    </div>
























</div>