@model FYP_Project.Models.Player

<style>

    html {
        width: 100%;
        height: 100%;
    }

    body {
        padding: 50px;
        background: linear-gradient(45deg, rgba(66, 183, 245, 0.8) 0%, rgba(66, 245, 189, 0.4) 100%);
    }



    .inner-div {
        padding: 30px;
        background-color: white;
        margin: 0 auto;
        border-radius: 30px;
    }

    .btn.btn-primary {
        border-radius: 30px;
        width: 65%;
        background-image: linear-gradient(to right, #77A1D3 0%, #79CBCA 51%, #77A1D3 100%);
        background-position: right center;
    }

    .image {
        width: 300px;
        margin: 0 auto;
        display: inline-block;
        align-items: center;
    }

    .imgdiv {
        display: flex;
        justify-content: center;
    }
</style>

<div class="imgdiv">
    <img class="image"
         src="~/Images/Sign Up.svg" />
</div>


<div class="inner-div">



    <form asp-controller="Account"
          asp-action="Register"
          method="post">

        <div class="form-group row">
            <div class="offset-sm-4 col-sm-4">
                <h2>Register an Account</h2>
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label offset-sm-2 col-sm-2" asp-for="Name">Name :</label>
            <div class="col-sm-4">
                <input type="text" asp-for="Name" class="form-control" required="Required" />
            </div>
            <div class="col-sm-3">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label offset-sm-2 col-sm-2" asp-for="Email">Email Address :</label>
            <div class="col-sm-4">
                <input type="text" asp-for="Email" class="form-control" required="Required" />
            </div>
            <div class="col-sm-3">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label offset-sm-2 col-sm-2" asp-for="UserName">Username :</label>
            <div class="col-sm-4">
                <input type="text" asp-for="UserName" class="form-control" required="Required" />
            </div>
            <div class="col-sm-3">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label offset-sm-2 col-sm-2" asp-for="PlayerPw">Password :</label>
            <div class="col-sm-4">
                <input type="password" asp-for="PlayerPw" class="form-control" required="Required" />
            </div>
            <div class="col-sm-3">
                <span asp-validation-for="PlayerPw" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label offset-sm-2 col-sm-2" asp-for="PlayerPw2">Confirm Password:</label>
            <div class="col-sm-4">
                <input type="password" asp-for="PlayerPw2" class="form-control" required="Required" />
            </div>
            <div class="col-sm-3">
                <span asp-validation-for="PlayerPw2" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="offset-sm-4 col-sm-6">
                <input type="submit" value="Sign Up" class="btn btn-primary" />

            </div>
        </div>

        @if (ViewData["Message"] != null)
        {
            <div class="form-group row">
                <div class="alert alert-@ViewData["MsgType"]">
                    <text>@ViewData["Message"]</text>
                </div>
            </div>
        }

        <div class="offset-sm-4 col-sm-5">
            Already have an account? <a href="/account/login"> Log In</a>
            <br />
            <a href="/">Go Back</a>
        </div>

    </form>
  
</div>
